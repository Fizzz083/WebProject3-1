@model X.PagedList.IPagedList<MyWebApp.Models.AddProblem>

@{
    ViewData["Title"] = "Added Problems";
}

@using X.PagedList;
@using X.PagedList.Mvc.Core;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;


<div>
<h3>Problems</h3>
<table class ="table">
    <tr>
        <th>
            Problem Name
        </th>
        <th>
            Tag
        </th>
        <th>
           Hint
        </th>
        <th>
           Added By
        </th>
        <th>
           Link
        </th>
    </tr>

    @if(Model.Count()==0)
    {
        <h4>No problems found.</h4>
    }
    else
    {
        foreach(var item in Model)
        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PTag)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PIdea)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => item.PAddedBy)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => item.PLink)
                        </td>
                    </tr>
        }
    }

</table>

<br/>

<div >
@Html.PagedListPager(Model, i => Url.Action("Index", "AddProblem", 
        new { i }),
        new X.PagedList.Web.Common.PagedListRenderOptions 
        {
              LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
        }
        )
</div>
</div>

<div>
 <a class="btn" asp-area="" asp-controller="AddProblem" asp-action="Create">add</a>
</div>
