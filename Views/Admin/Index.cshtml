@model MyWebApp.Models.CollectionDataModel

<style>
    hr.rounded {
  border-top: 8px solid #bbb;
  border-radius: 5px;
}
</style>


   <h4  style="text-align:center">Teacher info</h4>
@if(Model.Teachers !=null)
{
 
    <table >
    <tr>
        <th  style="padding: 15px"  >Id</th>
        <th  style="padding: 15px"  >Name</th>
        <th  style="padding: 15px" >Email</th>
    </tr>
    @foreach (Teacher teacher in Model.Teachers)
    {
        <tr>
            <td>@teacher.Id</td>
            <td>@teacher.FullName</td>
            <td>@teacher.Email</td>
            <td  style="padding: 15px" >
                <a asp-action="TeacherEdit" asp-route-id="@teacher.Id">Edit</a> |
                <a asp-action="TeacherDetails" asp-route-id="@teacher.Id">Details</a> |
                <a asp-action="TeacherDelete" asp-route-id="@teacher.Id">Delete</a>
            </td>
        </tr> 
    }
</table>

}
else
{
    <p>No Teacher is added</p>
}

<div>
<p>
    <a asp-action="AddTeacher">Create New</a>
</p>
</div>

<br/>
<br/>
<hr class="rounded">


<h4  style="text-align:center">Notice</h4>
@if(Model.Notices !=null)
{
    
    <table>
    <tr style="padding: 5px">
        <th  style="padding: 15px" >Id</th>
        <th  style="padding: 15px" >Short Description</th>
        <th  style="padding: 15px">Descriptin</th>
        <th  style="padding: 15px">Time</th>
    </tr>
    @foreach (Notice notice in Model.Notices)
    {
        <tr>
            <td>@notice.NId</td>
            <td>@notice.ShortDescription</td>
            <td>@notice.Description</td>
            <td>@notice.Time</td>
            <td  style="padding: 15px" >
                <a asp-action="NoticeEdit" asp-route-id="@notice.NId">Edit</a> |
                <a asp-action="NoticeDetails" asp-route-id="@notice.NId">Details</a> |
                <a asp-action="NoticeDelete" asp-route-id="@notice.NId">Delete</a>
            </td>
        </tr> 
    }
</table>

}
else
{
    <p>No Notice is added</p>
}

<div>
<p>
    <a asp-action="AddNotice">Create New</a>
</p>
</div>

<br/>
<br/>
<hr class="rounded">

 <h4  style="text-align:center">Teams</h4>
@if(Model.Teams !=null)
{
   
    <table>
    <tr style="padding: 5px">
        <th  style="padding: 15px" >Team Id</th>
        <th  style="padding: 15px" >Team Name</th>
        <th  style="padding: 15px">Member 1</th>
        <th  style="padding: 15px">Member 2</th>
        <th  style="padding: 15px">Member 3</th>
        <th  style="padding: 15px">Email</th>
        <th  style="padding: 15px">Phonenumber</th>
    </tr>
    @foreach (Team team in Model.Teams)
    {
        <tr>
            <td>@team.TId</td>
            <td>@team.TeamName</td>
            <td>@team.Member1</td>
            <td>@team.Member2</td>
            <td>@team.Member3</td>
            <td>@team.Email</td>
            <td>@team.Phonenumber</td>
            <td  style="padding: 15px" >
                <a asp-action="TeamEdit" asp-route-id="@team.TId">Edit</a> |
                @* <a asp-action="NoticeDetails" asp-route-id="@team.TId">Details</a> | *@
                <a asp-action="TeamDelete" asp-route-id="@team.TId">Delete</a>
            </td>
        </tr> 
    }
</table>

}
else
{
    <p>No Team is added</p>
}

<div>
<p>
    <a asp-action="AddTeam">Create New</a>
</p>
</div>

<br/>
<br/>
<hr class="rounded">



