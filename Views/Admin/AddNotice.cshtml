@model MyWebApp.Models.Notice

@{
    ViewData["Title"] = "Add Notice";
}

<div style="align-items: center;
  justify-content: left;">
    <h1 class="textstylei">Add Notice</h1>
</div>
<hr />
<div class="">
    <div class="row" style="margin-left: 80px;margin-top=20px;">
        <div class="col-md-4">
            <form asp-action="AddNotice">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="uplabel" asp-for="ShortDescription" class="control-label"></label>
                    <input asp-for="ShortDescription" class="form-control" />
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="uplabel" asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Time" class="form-control" />

                <div class="form-group">
                    <input type="submit" value="AddNotice" class="btn2 btn2up" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
