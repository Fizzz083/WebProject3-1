@model MyWebApp.Models.ImageUp

@{
    ViewData["Title"] = "Image Delete";
}

<h1>Image Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="row">
    <div class="col-md-4">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <h4>Team</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImageName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImageName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Datafiles)
                    </dt>

                @{
                    string imageBase64Data = Convert.ToBase64String(Model.Datafiles);
                    string imageDataURL = string.Format("data:image/png;base64,{0}", imageBase64Data);
                    var img = imageDataURL;
                }
                    <dd class="col-sm-10">
                        <div style=" background-color: darkgrey;width: 300px; padding: 1rem;">
                        <img style="width: 100%;height: 270px;  object-fit: contain;" src="@img" alt="" />
                      </div>
                    </dd>
                    
                </dl>
                <form enctype="multipart/form-data" method="post" asp-action="HomeImageDelete">

                <!-- form enctype="multipart/form-data" method ="post" asp-action="TeacherDelete" -->
                <input type="hidden" asp-for="ImageId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
