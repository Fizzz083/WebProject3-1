@model MyWebApp.Models.Teacher

@{
    ViewData["Title"] = "Add Teacher";
}


<div style="align-items: center;
  justify-content: left;">
<h1 class="textstylei">Add Coach</h1>
</div>
<hr />
<div class="" >
<div class="row" style="margin-left: 80px;margin-top=20px;">
    <div class="col-md-4">
        <form asp-action="AddTeacher">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="uplabel" asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="uplabel" asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="uplabel" asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                    @* <label class="uplabel" asp-for="PhoneNUmber" class="control-label"></label> *@
                    <input type="hidden" asp-for="PhoneNUmber" class="form-control" />
                    @* <span asp-validation-for="PhoneNUmber" class="text-danger"></span> *@
                </div>
            
            <div class="form-group">
                <input type="submit" value="AddTeacher" class="btn2 btn2up" />
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@if(ViewBag.Found!= null)
{
    <script type="text/javascript">
        window.onload = function(){
            alert("User Name already used.");
        };

    </script>
}